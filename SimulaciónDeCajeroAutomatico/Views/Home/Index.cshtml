@model BilletesViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="container d-flex justify-content-center">
    <form asp-action="Index" method="post" class="form-control shadow-sm w-75 mt-5 bg-light p-5">
        <div class="row justify-content-center mb-4">
            <label class="text-center form-label fs-3 col-12">Retira tu dinero</label>
        </div>
        <div class="row justify-content-center mb-3">
            <select class="form-select align-self-center" asp-for="ItemsSelected">
                <option value="@Model.Nothing" selected>Selecciona un metodo de dispensacion</option>
                <option value="@Model.CienYQuinientos">Billetes de 100 y 500</option>
                <option value="@Model.MilYDosCientos">Billetes de 1000 y 200</option>
                <option value="@Model.ModoEficiente">Metodo Eficiente</option>
            </select>
        </div>
        <div class="row justify-content-center form-floating ">
            <input asp-for="Monto"  type="number" id="numero" pattern="\d*" class=" form-control mb-3" placeholder="" />
            <label asp-for="Monto" class="form-label">Digita un monto</label>
            <span asp-validation-for="Monto" class="text-danger"></span>
        </div>
        <div class="row justify-content-center gap-3">
            <button type="submit" class="col btn btn-primary">Retirar</button>
            <a class="col btn btn-secondary">Ver Transacciones</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
 